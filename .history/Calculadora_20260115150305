                    <label for="v2">Meta de Saturação (V2 %)</label>
                    <input type="number" id="v2" class="form-control" placeholder="Ex: 70" min="0" max="100">
                </div>

                <div class="input-group">
                    <label for="v1">Saturação Atual (V1 %)</label>
                    <input type="number" id="v1" class="form-control" placeholder="Veja no laudo (V%)" min="0" max="100">
                    <div id="v1-error" class="error-msg">A saturação atual não pode ser maior que a meta!</div>
                </div>

                <div class="input-group">
                    <label for="ctc">CTC ($cm_c/dm^3$ ou $mmol_c \div 10$)</label>
                    <input type="number" id="ctc" class="form-control" placeholder="Ex: 12.5" step="0.1">
                </div>

                <div class="input-group">
                    <label for="prnt">PRNT do Calcário (%)</label>
                    <input type="number" id="prnt" class="form-control" placeholder="Ex: 80" value="80">
                </div>

                <button class="btn-calc" onclick="calculateLime()">CALCULAR <i class="fas fa-check"></i></button>

            </div>

