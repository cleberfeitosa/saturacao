    <script>
        // Função para preencher V2 automaticamente baseado na cultura
        function autoFillV2() {
            const select = document.getElementById('cropSelect');
            const v2Input = document.getElementById('v2');
            
            if (select.value !== 'custom') {
                v2Input.value = select.value;
                // Efeito visual leve para mostrar que mudou
                v2Input.style.backgroundColor = "#e8f5e9";
                setTimeout(() => { v2Input.style.backgroundColor = "#fff"; }, 500);
            } else {
                v2Input.value = '';
                v2Input.focus();
            }
        }

        // Função Principal de Cálculo
        function calculateLime() {
            // 1. Pegar valores
            const v1 = parseFloat(document.getElementById('v1').value);
            const v2 = parseFloat(document.getElementById('v2').value);
            const ctc = parseFloat(document.getElementById('ctc').value);
            const prnt = parseFloat(document.getElementById('prnt').value);

            // 2. Elementos de Interface
            const emptyState = document.getElementById('emptyState');
            const calcOutput = document.getElementById('calcOutput');
            const noNeedState = document.getElementById('noNeedState');
            const v1Error = document.getElementById('v1-error');
            const resultBox = document.getElementById('resultBox');

            // 3. Validação Básica
            if (isNaN(v1) || isNaN(v2) || isNaN(ctc) || isNaN(prnt)) {
                alert("Por favor, preencha todos os campos numéricos.");
                return;
            }

            // Validação Lógica (V1 > V2)
            if (v1 >= v2) {
                emptyState.style.display = 'none';
                calcOutput.style.display = 'none';
                noNeedState.style.display = 'block';
                v1Error.style.display = 'none';
                return;
            }

            v1Error.style.display = 'none';

            // 4. A FÓRMULA MÁGICA
            // NC = (V2 - V1) x CTC / PRNT
            let nc = ((v2 - v1) * ctc) / prnt;

            // Arredondar para 2 casas decimais
            nc = Math.round(nc * 100) / 100;

            // 5. Atualizar Interface
            emptyState.style.display = 'none';
            noNeedState.style.display = 'none';
            calcOutput.style.display = 'block';

            // Atualizar valores do card
            document.getElementById('finalResult').innerText = nc.toFixed(2); // Usando ponto para manter padrão numérico, ou replace('.', ',') para BR
            document.getElementById('deficitVal').innerText = (v2 - v1);
            document.getElementById('prntVal').innerText = prnt;

            // Feedback visual no box
            resultBox.style.borderColor = "var(--primary)";
            resultBox.style.backgroundColor = "#fff";
        }
    </script>
